{
  "name": "nuxtjs-firebase-functions",
  "version": "0.0.2",
  "description": "Host Nuxt.js SSR app on Firebase Cloud Functions with Firebase Dynamic Hosting.",
  "license": "MIT",
  "author": "David Royer",
  "repository": "https://github.com/davidroyer/nuxt-ssr-firebase",
  "scripts": {
    "dev": "cd \"src\" && yarn dev",
    "build": "cd \"src\" && yarn build",
    "serve": "firebase serve --only functions,hosting",
    "copyassets": "cp -R functions/.nuxt/dist/ public",
    "prepare": "yarn build && yarn copyassets",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
  }
}
