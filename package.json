{
  "name": "nuxt-firebase-functions",
  "version": "0.0.01",
  "description": "Nuxt.js SSR With Firebase Functions",
  "author": "David Royer <droyer01@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "serve": "firebase serve --only functions,hosting",
    "prepare": "yarn generate && yarn build",
    "deploy": "firebase deploy",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "package-functions": "cp -r .nuxt nuxt.config.js functions/ && cd functions && yarn"
  },
  "dependencies": {
    "nuxt": "latest"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
